<Window x:Class="FlujoCajaWpf.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Flujo de Caja - Login" 
        Height="550" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo - Logo y branding -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryGradient}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Resources/LogoSamaraRental.PNG" 
                       Width="150" Height="150" 
                       Margin="0,0,0,20"
                       Stretch="Uniform"/>
                <TextBlock Text="Sistema de Gestión" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Flujo de Caja" 
                           FontSize="16" 
                           Foreground="White"
                           TextAlignment="Center"
                           Opacity="0.9"/>
                
                <!-- Acento amarillo decorativo -->
                <Border Background="{StaticResource AccentYellowBrush}"
                        Width="60" Height="3"
                        CornerRadius="2"
                        Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Panel derecho - Formulario de login -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" Padding="30,15">
            <Border Background="White" CornerRadius="12" Padding="30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Bienvenido" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource DarkBlueBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Inicia sesión para continuar" 
                               FontSize="13" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,25"/>

                <!-- Email -->
                <TextBlock Text="Email" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtEmail"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,20"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="txtPassword"
                             Style="{StaticResource ModernPasswordBox}"
                             PasswordChanged="txtPassword_PasswordChanged"
                             KeyDown="txtPassword_KeyDown"
                             Margin="0,0,0,10"/>

                <!-- Mensaje de error -->
                <TextBlock Text="{Binding MensajeError}" 
                           Foreground="{StaticResource AccentRedBrush}"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"
                           Visibility="{Binding TieneMensajeError, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Botón de login -->
                <Button Content="Iniciar Sesión" 
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding IniciarSesionCommand}"
                        Height="45"
                        FontSize="16"
                        Margin="0,0,0,20"/>

                <!-- Loading indicator -->
                <ProgressBar IsIndeterminate="True" 
                             Height="4"
                             Visibility="{Binding EstaCargando, Converter={StaticResource BoolToVisibilityConverter}}"
                             Margin="0,0,0,20"/>

                <!-- Texto informativo -->
                <TextBlock TextAlignment="Center"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12">
                    <Run Text="Sistema de Gestión de Flujo de Caja"/>
                    <LineBreak/>
                    <Run Text="Playa Sámara © 2025"/>
                </TextBlock>
            </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
