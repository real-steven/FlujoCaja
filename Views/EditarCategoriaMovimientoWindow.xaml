<Window x:Class="FlujoCajaWpf.Views.EditarCategoriaMovimientoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar CategorÃ­a Movimiento"
        Height="450"
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F3F4F6">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header con gradiente azul -->
        <Border Grid.Row="0" Padding="25,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0F172A" Offset="0"/>
                    <GradientStop Color="#1E3A8A" Offset="0.5"/>
                    <GradientStop Color="#3B82F6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBlock Text="âœï¸ Editar CategorÃ­a de Movimiento"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Actualizar informaciÃ³n de la categorÃ­a"
                           FontSize="13"
                           Foreground="#FCD34D"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="30,25">
            <!-- Nombre de CategorÃ­a -->
            <TextBlock Text="Nombre de la CategorÃ­a *"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Margin="0,0,0,8"/>
            <TextBox x:Name="txtNombreCategoria"
                     Background="White"
                     BorderBrush="#D1D5DB"
                     BorderThickness="1"
                     Padding="12,10"
                     FontSize="14"
                     Margin="0,0,0,20"/>

            <!-- Tipo -->
            <TextBlock Text="Tipo de Movimiento *"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Margin="0,0,0,8"/>
            <ComboBox x:Name="cmbTipo"
                      Background="White"
                      BorderBrush="#D1D5DB"
                      BorderThickness="1"
                      Padding="12,10"
                      FontSize="14"
                      Margin="0,0,0,30">
                <ComboBoxItem Content="Ingreso"/>
                <ComboBoxItem Content="Egreso"/>
            </ComboBox>

            <!-- Botones -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="â†º Restaurar"
                        Click="Restaurar_Click"
                        Background="#6B7280"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="0,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="0,0,10,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4B5563"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1"
                        Content="ðŸ’¾ Guardar Cambios"
                        Click="Guardar_Click"
                        Background="#10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="0,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10,0,0,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
