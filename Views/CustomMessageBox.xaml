<Window x:Class="FlujoCajaWpf.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensaje"
        MinHeight="250"
        MaxHeight="600"
        Width="520"
        SizeToContent="Height"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="{DynamicResource CardBackgroundBrush}" 
            CornerRadius="16"
            Padding="0"
            BorderThickness="1"
            BorderBrush="#CBD5E1">
        <Border.Effect>
            <DropShadowEffect Color="#1E3A8A" 
                              Direction="270" 
                              ShadowDepth="4" 
                              BlurRadius="30" 
                              Opacity="0.25"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header con gradiente -->
            <Border x:Name="borderHeader"
                    Grid.Row="0" 
                    CornerRadius="16,16,0,0"
                    Padding="25,18">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0F172A" Offset="0"/>
                        <GradientStop Color="#1E3A8A" Offset="0.5"/>
                        <GradientStop Color="#3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock x:Name="txtTitulo"
                               Text="Confirmación"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Contenido con ScrollViewer -->
            <ScrollViewer Grid.Row="1" 
                          MaxHeight="350"
                          VerticalScrollBarVisibility="Auto"
                          Padding="30,25">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icono -->
                    <TextBlock x:Name="txtIcono"
                               Grid.Column="0"
                               Text="ℹ️"
                               FontSize="40"
                               VerticalAlignment="Top"
                               Margin="0,2,20,0"/>
                    
                    <!-- Mensaje -->
                    <TextBlock x:Name="txtMensaje"
                               Grid.Column="1"
                               Text="Mensaje"
                               FontSize="15"
                               LineHeight="22"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center"/>
                </Grid>
            </ScrollViewer>
            
            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC"
                    CornerRadius="0,0,16,16"
                    Padding="25,18"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,1,0,0">
                <StackPanel x:Name="stackBotones"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <!-- Los botones se agregan dinámicamente -->
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
