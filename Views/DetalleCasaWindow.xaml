<Window x:Class="FlujoCajaWpf.Views.DetalleCasaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Casa"
        Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundBrush}"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con gradiente azul -->
        <Border Grid.Row="0" Padding="25,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0F172A" Offset="0"/>
                    <GradientStop Color="#1E3A8A" Offset="0.5"/>
                    <GradientStop Color="#3B82F6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtNombreCasa" 
                               Text="Nombre de la Casa"
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="txtDuenoCasa" 
                               Text="DueÃ±o: -"
                               FontSize="14" 
                               Foreground="#E0E7FF" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Click="Cerrar_Click"
                        Background="#DC2626"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Padding="20,10"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#DC2626"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EF4444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="âœ• Cerrar" FontSize="14" FontWeight="SemiBold"/>
                </Button>
            </Grid>
        </Border>

        <!-- Tabs -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="#E5E7EB" BorderThickness="0,1,0,1">
            <StackPanel Orientation="Horizontal" Margin="25,0">
                <Button x:Name="btnTabResumen" 
                        Click="TabResumen_Click"
                        Background="#3B82F6" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8,8,0,0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ“Š Resumen" FontSize="14" FontWeight="SemiBold"/>
                </Button>

                <Button x:Name="btnTabMovimientos" 
                        Click="TabMovimientos_Click"
                        Background="Transparent"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8,8,0,0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ’¸ Movimientos" FontSize="14" FontWeight="SemiBold"/>
                </Button>

                <Button x:Name="btnTabDetalles" 
                        Click="TabDetalles_Click"
                        Background="Transparent"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Margin="10,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8,8,0,0"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="ðŸ  Detalles" FontSize="14" FontWeight="SemiBold"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Contenido de tabs -->
        <Grid Grid.Row="2">
            <!-- Tab Resumen -->
            <ScrollViewer x:Name="tabResumen" Visibility="Visible">
                <StackPanel Margin="25,20">
                    
                    <!-- TÃ­tulo: Estado General -->
                    <TextBlock Text="ðŸ“Š ESTADO FINANCIERO GENERAL" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                    
                    <!-- Cards de resumen general (histÃ³rico) -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Balance Total General -->
                        <Border Grid.Column="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Balance Total" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtBalanceGeneral" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Ingresos General -->
                        <Border Grid.Column="1" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="ðŸ’° Total Ingresos" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtIngresosGenerales" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Egresos General -->
                        <Border Grid.Column="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="ðŸ’¸ Total Egresos" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtEgresosGenerales" Text="$0.00" FontSize="32" FontWeight="Bold" Foreground="#DC2626"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Indicador de Salud Financiera -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="25" Margin="0,0,0,30">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ’¹ INDICADOR DE SALUD FINANCIERA" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Estado: " FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtEstadoSalud" Text="ðŸŸ¢ SALUDABLE" FontSize="16" FontWeight="Bold" Foreground="#10B981" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                            <TextBlock x:Name="txtMensajeSalud" Text="Casa en buen estado financiero" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Separador -->
                    <Border Height="2" Background="#E5E7EB" Margin="0,10,0,30"/>

                    <!-- TÃ­tulo: Detalle Mensual -->
                    <TextBlock Text="ðŸ“… DETALLE MENSUAL" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                    <!-- Filtros de AÃ±o y Mes -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="AÃ±o:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbResumenAnio" Width="120" Height="35" FontSize="14" SelectionChanged="CmbResumenAnio_SelectionChanged"/>
                            <TextBlock Text="Mes:" FontSize="14" VerticalAlignment="Center" Margin="30,0,10,0"/>
                            <ComboBox x:Name="cmbResumenMes" Width="150" Height="35" FontSize="14" SelectionChanged="CmbResumenMes_SelectionChanged">
                                <ComboBoxItem Content="Enero" Tag="1"/>
                                <ComboBoxItem Content="Febrero" Tag="2"/>
                                <ComboBoxItem Content="Marzo" Tag="3"/>
                                <ComboBoxItem Content="Abril" Tag="4"/>
                                <ComboBoxItem Content="Mayo" Tag="5"/>
                                <ComboBoxItem Content="Junio" Tag="6"/>
                                <ComboBoxItem Content="Julio" Tag="7"/>
                                <ComboBoxItem Content="Agosto" Tag="8"/>
                                <ComboBoxItem Content="Septiembre" Tag="9"/>
                                <ComboBoxItem Content="Octubre" Tag="10"/>
                                <ComboBoxItem Content="Noviembre" Tag="11"/>
                                <ComboBoxItem Content="Diciembre" Tag="12"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Cards de Detalle Mensual -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Balance del Mes -->
                        <Border Grid.Column="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Balance del Mes" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtBalanceMensual" Text="$0.00" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Ingresos del Mes -->
                        <Border Grid.Column="1" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="5,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="ðŸ’° Ingresos del Mes" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtIngresosMensuales" Text="$0.00" FontSize="28" FontWeight="Bold" Foreground="#10B981"/>
                            </StackPanel>
                        </Border>

                        <!-- Egresos del Mes -->
                        <Border Grid.Column="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="ðŸ’¸ Egresos del Mes" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock x:Name="txtEgresosMensuales" Text="$0.00" FontSize="28" FontWeight="Bold" Foreground="#DC2626"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Timeline de Balance Anual -->
                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" Direction="270"/>
                        </Border.Effect>
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ“ˆ Timeline de Balance del AÃ±o" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="AÃ±o:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cmbTimelineAnio" Width="120" Height="35" FontSize="14" SelectionChanged="CmbTimelineAnio_SelectionChanged"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Timeline horizontal -->
                            <StackPanel x:Name="timelineContainer" Orientation="Vertical">
                                <!-- Meses (E F M A M J J A S O N D) -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="E" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="F" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="M" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="A" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="M" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" Text="J" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" Text="J" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="7" Text="A" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="8" Text="S" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="9" Text="O" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="10" Text="N" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="11" Text="D" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Indicadores de estado (cÃ­rculos) -->
                                <Grid x:Name="gridIndicadores" Margin="0,10,0,10" Height="60">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                
                                <!-- Balances (montos) -->
                                <Grid x:Name="gridBalances" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Tab Movimientos -->
            <Grid x:Name="tabMovimientos" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Barra de bÃºsqueda y filtros -->
                <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" Padding="25,15" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- ComboBox AÃ±o -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ“… AÃ±o" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                       Margin="0,0,0,8"/>
                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="8" ShadowDepth="2" Direction="270"/>
                                </Border.Effect>
                                <ComboBox x:Name="cmbAnio"
                                          SelectionChanged="CmbAnio_SelectionChanged"
                                          Width="100"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="10,8"
                                          FontSize="13">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F9FAFB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </Border>
                        </StackPanel>

                        <!-- ComboBox Mes -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ“† Mes" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextPrimaryBrush}" 
                                       Margin="0,0,0,8"/>
                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="8" ShadowDepth="2" Direction="270"/>
                                </Border.Effect>
                                <ComboBox x:Name="cmbMes"
                                          SelectionChanged="CmbMes_SelectionChanged"
                                          DisplayMemberPath="NombreMes"
                                          Width="150"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="10,8"
                                          FontSize="13">
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F9FAFB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </Border>
                        </StackPanel>

                        <TextBox x:Name="txtBuscarMovimiento"
                                 Grid.Column="2"
                                 TextChanged="BuscarMovimiento_TextChanged"
                                 Background="{DynamicResource BackgroundBrush}"
                                 BorderBrush="#E5E7EB"
                                 BorderThickness="1"
                                 Padding="12,10"
                                 FontSize="13"
                                 Margin="0,17,15,0"
                                 VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <Grid>
                                                        <TextBlock Text="ðŸ” Buscar por descripciÃ³n o categorÃ­a..."
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   Margin="12,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Grid.Column="3"
                                Click="NuevoMovimiento_Click"
                                Background="#10B981"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Padding="20,10"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Margin="10,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#10B981"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#059669"/>
                                        </Trigger>
                                    </Style.Triggers>
