<Window x:Class="FlujoCajaWpf.Views.DesactivacionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmar Desactivación"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="White"
        Foreground="#1E293B"
        FontFamily="Segoe UI"
        FontSize="14">

    <Grid Background="White">
        <StackPanel Margin="30" VerticalAlignment="Stretch">
            
            <!-- Título con icono -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="⚠️" FontSize="32" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Confirmar Desactivación" FontSize="18" FontWeight="Bold" Foreground="#1E293B"/>
                    <TextBlock Text="{Binding PropiedadNombre}" FontSize="14" Foreground="#64748B" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Descripción -->
            <TextBlock Text="¿Estás seguro de que deseas desactivar esta propiedad?" 
                       FontSize="13"
                       Foreground="#475569"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <!-- Campo de motivo -->
            <TextBlock Text="Motivo de desactivación (opcional)" 
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#1E293B"
                       Margin="0,0,0,8"/>
            
            <Border Background="#F1F5F9"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1"
                    CornerRadius="6"
                    Margin="0,0,0,25">
                <TextBox x:Name="MotivoTextBox"
                         Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}"
                         Height="80"
                         Padding="12,10"
                         FontSize="12"
                         Foreground="#1E293B"
                         Background="Transparent"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Botones -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Cancelar -->
                <Button Grid.Column="0"
                        Content="Cancelar"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Padding="15,10"
                        Click="CancelarButton_Click"
                        Background="#E2E8F0"
                        Foreground="#1E293B"
                        Cursor="Hand"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CBD5E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Botón Confirmar -->
                <Button Grid.Column="2"
                        Content="Desactivar Propiedad"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Padding="15,10"
                        Click="ConfirmarButton_Click"
                        Background="#DC2626"
                        Foreground="White"
                        Cursor="Hand"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B91C1C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
