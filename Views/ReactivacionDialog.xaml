<Window x:Class="FlujoCajaWpf.Views.ReactivacionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reactivar Propiedad"
        Width="550"
        Height="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="{DynamicResource CardBackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}"
        FontFamily="Segoe UI"
        FontSize="14">

    <Grid Background="{DynamicResource CardBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <StackPanel Grid.Row="0" Margin="30,30,30,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="âœ…" FontSize="32" Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Reactivar Propiedad" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Selecciona la propiedad a reactivar" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Barra de bÃºsqueda y lista -->
        <StackPanel Grid.Row="1" Margin="30,0">
            <!-- BÃºsqueda -->
            <Border Background="#F1F5F9" 
                    CornerRadius="6" 
                    Padding="12,8"
                    Margin="0,0,0,15">
                <Grid>
                    <TextBox x:Name="BusquedaTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="13"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             TextChanged="BusquedaTextBox_TextChanged"/>
                    <TextBlock Text="ðŸ” Buscar propiedad..."
                               FontSize="13"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               IsHitTestVisible="False"
                               Margin="2,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=BusquedaTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Lista de propiedades -->
            <Border Background="#F8FAFC" 
                    BorderBrush="#CBD5E1" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Height="250">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="PropiedadesListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionMode="Single"
                             SelectionChanged="PropiedadesListBox_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="0,0,0,1"
                                                    BorderBrush="#E2E8F0"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EFF6FF"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#DBEAFE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Nombre}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock FontSize="12" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,2,0,0">
                                        <Run Text="{Binding CategoriaNombre}"/>
                                        <Run Text=" | "/>
                                        <Run Text="{Binding DuenoNombre}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- Campo de motivo -->
        <StackPanel Grid.Row="2" Margin="30,20,30,0">
            <TextBlock Text="Motivo de reactivaciÃ³n (opcional)" 
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,8"/>
            
            <TextBox x:Name="MotivoTextBox"
                     Height="80"
                     Padding="12,10"
                     FontSize="12"
                     Foreground="{DynamicResource TextPrimaryBrush}"
                     Background="#F1F5F9"
                     BorderBrush="#CBD5E1"
                     BorderThickness="1"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Botones -->
        <Grid Grid.Row="3" Margin="30,25,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- BotÃ³n Cancelar -->
            <Button Grid.Column="0"
                    Content="Cancelar"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Padding="15,10"
                    Click="CancelarButton_Click"
                    Background="#E2E8F0"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CBD5E1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- BotÃ³n Confirmar -->
            <Button Grid.Column="2"
                    x:Name="ConfirmarButton"
                    Content="Reactivar Propiedad"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Padding="15,10"
                    Click="ConfirmarButton_Click"
                    Background="#10B981"
                    Foreground="White"
                    Cursor="Hand"
                    BorderThickness="0"
                    IsEnabled="False">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Opacity" Value="0.5"/>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
