<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colores corporativos - Paleta Azul, Amarillo y Gris -->
    <Color x:Key="PrimaryBlue">#1E3A8A</Color>
    <Color x:Key="LightBlue">#3B82F6</Color>
    <Color x:Key="DarkBlue">#0F172A</Color>
    <Color x:Key="AccentYellow">#F59E0B</Color>
    <Color x:Key="LightYellow">#FCD34D</Color>
    <Color x:Key="BackgroundGray">#D1D5DB</Color>
    <Color x:Key="DarkGray">#475569</Color>
    <Color x:Key="MediumGray">#64748B</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="TextPrimary">#1E293B</Color>
    <Color x:Key="TextSecondary">#64748B</Color>
    <Color x:Key="BorderColor">#CBD5E1</Color>
    <Color x:Key="AccentRed">#DC2626</Color>
    <Color x:Key="SuccessGreen">#10B981</Color>
    
    <!-- Brushes dinámicas para temas (serán modificadas por ThemeService) -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F4F6"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#000000"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="#202355"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#F0F0F0"/>
    
    <!-- Brushes principales (fijas, no cambian con tema) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryBlue}"/>
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlue}"/>
    <SolidColorBrush x:Key="AccentYellowBrush" Color="{StaticResource AccentYellow}"/>
    <SolidColorBrush x:Key="LightYellowBrush" Color="{StaticResource LightYellow}"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>
    <SolidColorBrush x:Key="MediumGrayBrush" Color="{StaticResource MediumGray}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
    
    <!-- Gradientes profesionales -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource DarkBlue}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryBlue}" Offset="0.5"/>
        <GradientStop Color="{StaticResource LightBlue}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource AccentYellow}" Offset="0"/>
        <GradientStop Color="{StaticResource LightYellow}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="LightGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="{StaticResource BackgroundGray}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Brushes legacy (compatibilidad con código existente) -->
    <SolidColorBrush x:Key="PrimaryGreen" Color="{StaticResource PrimaryBlue}"/>
    <SolidColorBrush x:Key="LightGreenBrush" Color="{StaticResource LightBlue}"/>
    <SolidColorBrush x:Key="DarkGreenBrush" Color="{StaticResource DarkBlue}"/>
    <SolidColorBrush x:Key="LightRedBrush" Color="{StaticResource AccentRed}"/>

</ResourceDictionary>
